pipeline {
    agent {
        docker {
            image 'kennethreitz/pipenv:latest'
            args '-u root --privileged -v /var/run/docker.sock:/var/run/docker.sock'
            label 'slave'
        }
    }
    stages {
        stage('test') {
            steps {
                git credentialsId: 'GIT_CREDS', url: 'https://github.com/pravi1991/ci-cd.git'            
                script {
                    sh "pipenv install"
                    sh "pipenv run pip install checkov"
                    sh "pipenv run checkov -d k8s-manifests -o junitxml -c `cat tests/terratest/check_list.txt` > result.xml || true"
                    junit "result.xml"
                }

            }
        }
    }
    options {
        preserveStashes()
        timestamps()
        ansiColor('xterm')
    }
    post {
        always{
            junit 'result.xml'
        }
    }
}